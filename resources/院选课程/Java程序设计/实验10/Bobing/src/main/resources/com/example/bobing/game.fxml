<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bobing.GameController">
    <Label text="输入玩家数 (6-10):"/>
    <TextField fx:id="numberInput"/>
    <Button text="开始游戏" fx:id="startButton" onAction="#handleStartGame"/>
    <Button text="重新开始游戏" fx:id="restartButton" onAction="#handleRestartGame"/>
    <TextArea fx:id="outputArea" prefHeight="200.0" prefWidth="300.0"/>
</VBox>
